{
  "name": "@heylock-dev/ui",
  "version": "0.2.7",
  "description": "Heylock UI React component library",
  "type": "module",
  "types": "dist/types.d.ts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": ["**/*.css"],
  "scripts": {
    "build": "node scripts/build.mjs",
    "build:prod": "node scripts/build.mjs --prod",
    "test:smoke": "node scripts/smoke-test.mjs",
    "prepublishOnly": "npm run build",
    "publish:package": "npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Heylock-AI/Heylock-ui.git"
  },
  "author": "Heylock team",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Heylock-AI/Heylock-ui/issues"
  },
  "homepage": "https://github.com/Heylock-AI/Heylock-ui#readme",
  "dependencies": {
    "framer-motion": "^12.23.12",
    "heylock": "^0.2.0",
    "tailwind-merge": "^3.3.1"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.23.0"
  }
}
